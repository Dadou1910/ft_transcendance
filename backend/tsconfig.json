{
    "compilerOptions": {
      "target": "ESNext",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
       "include": [
           "src/**/*",
           "src/types/**/*.d.ts"   // ← on inclut nos déclarations
         ],
    "exclude": ["node_modules"]
  }